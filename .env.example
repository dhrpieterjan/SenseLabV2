# Database Configuration
# Copy this file to .env.local and fill in your actual values

DATABASE_HOST=localhost
DATABASE_PORT=1433
DATABASE_NAME=your_database_name
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# For Azure SQL, set these to true
DATABASE_ENCRYPT=true
DATABASE_TRUST_SERVER_CERTIFICATE=false

# For local development, you might need:
# DATABASE_TRUST_SERVER_CERTIFICATE=true

# Room Control Configuration (Sensorisch LABO API)
# Set to 'true' to use mock API for testing without hardware
ROOM_CONTROL_MOCK=true

# Real hardware connection (only used when ROOM_CONTROL_MOCK=false)
ROOM_CONTROL_URL=http://192.168.0.237
ROOM_CONTROL_USERNAME=admin
ROOM_CONTROL_PASSWORD=secret
